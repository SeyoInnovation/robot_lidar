<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <!-- 必须先有质量，防止被 Gazebo 吃掉 -->
  <link name="base_footprint">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- 所有 link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.3 0.2 0.1"/></geometry>
      <material name="blue"><color rgba="0.3 0.3 1.0 0.8"/></material>
    </visual>
    <collision><geometry><box size="0.3 0.2 0.1"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.05" iyy="0.05" izz="0.05"/></inertial>
  </link>

  <link name="left_wheel_link">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.032" length="0.04"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.032" length="0.04"/></geometry>
    </collision>
    <inertial>
      <origin rpy="1.5708 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00036" iyy="0.0001904" izz="0.00036"/>
    </inertial>
  </link>

  <link name="right_wheel_link">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.032" length="0.04"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.032" length="0.04"/></geometry>
    </collision>
    <inertial>
      <origin rpy="1.5708 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00036" iyy="0.0001904" izz="0.00036"/>
    </inertial>
  </link>

  <!-- 所有 joint（顺序无所谓了） -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.10 -0.03"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.10 -0.03"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- 差速驱动插件 -->
  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.20</wheel_separation>
      <wheel_diameter>0.064</wheel_diameter>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odom_publisher_frequency>50</odom_publisher_frequency>
    </plugin>
  </gazebo>

</robot>